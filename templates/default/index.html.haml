%h2
  Index

%div
  %ul.nav.nav-tabs{:role => "tablist"}
    %li.active
      %a{"data-toggle" => "tab", href: "#functions", role: "tab"} Functions
    %li
      %a{"data-toggle" => "tab", href: "#enumerations", role: "tab"} Enumerations
    %li
      %a{"data-toggle" => "tab", href: "#enumerators", role: "tab"} Enumerators
    %li
      %a{"data-toggle" => "tab", href: "#classes", role: "tab"} Classes
    %li
      %a{"data-toggle" => "tab", href: "#namespaces", role: "tab"} Namespaces

  .tab-content
