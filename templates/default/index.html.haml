      = partial 'grouped_table', { group: index.grouped_functions }

    #enumerations.tab-pane{role: "tabpanel"}
      = partial 'grouped_table', { group: index.grouped_enumerations }

    #enumerators.tab-pane{role: "tabpanel"}
      = partial 'grouped_table', { group: index.grouped_enumerators }

    #classes.tab-pane{role: "tabpanel"}
      = partial 'grouped_table', { group: index.grouped_classes }

    #namespaces.tab-pane{role: "tabpanel"}
      = partial 'grouped_table', { group: index.grouped_namespaces }
